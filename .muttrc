## General options
set header_cache = "~/.cache/mutt"
set imap_check_subscribed
#set imap_keepalive = 300
#unset imap_passive
#set mail_check = 60
set ssl_verify_host = no
set ssl_verify_dates = no
set mbox_type=Maildir
set mailcap_path="~/mailcap.mutt"
set editor="vim"
set delete="yes"
set bounce="yes"
set confirmappend="no"
macro attach O \
"\
<enter-command>unset wait_key<enter>\
<shell-escape>rm -f /tmp/mutt-attach<enter>\
<save-entry><kill-line>/tmp/mutt-attach<enter>\
<shell-escape> /tmp/mutt-attach &^A\
"
#macro index,pager \cb ": unset wait_key; set pipe_decode\n|w3m\n: set wait_key; unset pipe_decode\n" "call w3m to extract URLs out of a message"
auto_view text/html
alternative_order text/plain text/enriched text/html
set query_command= "abook --mutt-query '%s'"
macro index,pager A "<pipe-message>abook --add-email-quiet<return>"
color normal	white black
color attachment brightyellow black
color hdrdefault cyan black
color indicator black cyan
color markers	brightred black
color quoted	green black
color signature cyan black
color status	brightgreen blue
color tilde	blue black
color tree	red black

color index	red black ~D
color index	magenta black ~T

#color header	brightgreen black ^From:
#color header	brightcyan black ^To:
#color header	brightcyan black ^Reply-To:
#color header	brightcyan black ^Cc:
#color header	brightblue black ^Subject:

color body	brightred black [\-\.+_a-zA-Z0-9]+@[\-\.a-zA-Z0-9]+
# identifies email addresses

color body	brightblue black (https?|ftp)://[\-\.,/%~_:?&=\#a-zA-Z0-9]+
# identifies URLs
## ACCOUNT1
source "~/.mutt/BP"
# Here we use the $folder variable that has just been set in the sourced file.
# We must set it right now otherwise the 'folder' variable will change in the next sourced file.
folder-hook $folder 'imap://avidrecovery.com/INBOX ~/.mutt/BP'

## ACCOUNT2
source "~/.mutt/Office"
folder-hook imap://avidrecovery.com/INBOX 'source ~/.mutt/Office'

## Shortcuts
macro index,pager <f2> '<sync-mailbox><enter-command>source ~/.mutt/BP<enter><change-folder>!<enter>'
macro index,pager <f3> '<sync-mailbox><enter-command>source ~/.mutt/Office<enter><change-folder>!<enter>'

macro index 'c' '<change-folder>?<change-dir><home>^K=<enter>'
